####
# This .htaccess is only useful in case you web host do not offer the functionality of the public_html folder,
# or does not allow you to place files outside of it.
####


# Prevent directory browsing
Options All -Indexes

# Protect htaccess
<Files ~ "^.*\.([Hh][Tt][AaPp])">
order allow,deny
deny from all
satisfy all
</Files>

RewriteEngine on
RewriteBase /

# Explicitely redirect any URL starting with /site/
RewriteCond %{ENV:REDIRECT_STATUS} ^$
RewriteRule ^site/(.*)$ /$1 [L,R=303]

# Iternally rebase all urls to the /site/ folder
RewriteCond %{REQUEST_URI} !^/site/
RewriteRule ^(.*)$ site/$1 [END]
